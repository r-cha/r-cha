---
const projects = [
  {
    name: "Concerto Studio",
    url: "https://concerto.studio/",
    source: null,
  },
  {
    name: "Rhema Journal",
    url: "https://rhemajournal.com/",
    source: "https://github.com/r-cha/Rhema-Journal",
  },
  {
    name: "rochadrums",
    url: "https://www.rochadrums.com/",
    source: "https://github.com/r-cha/rochadrums-React",
  },
  {
    name: "wordelm",
    url: "https://wordelm.r-cha.dev/",
    source: "https://github.com/r-cha/wordelm",
  },
];
---

<section class="w-auto border-white border-l pl-4">
  <ul>
    {
      projects.map((project) => (
        <li class="flex flex-row justify-between">
          <a
            href={project.url}
            target="_blank"
            class="text-decoration hover:underline hover:text-neutral-200"
          >
            {project.name}
          </a>
          {project.source && (
            <a
              href={project.source}
              target="_blank"
              class="text-right text-decoration hover:underline hover:text-neutral-200"
            >
              [source]
            </a>
          )}
        </li>
      ))
    }
  </ul>
</section>
