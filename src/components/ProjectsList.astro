---
const projectsWithImages = [
  {
    name: "Concerto Studio",
    url: "https://concerto.studio/",
    description: "A web app for collaborative review of audio",
    image: "/images/concerto-studio.png",
  },
  {
    name: "Trading Fours",
    url: "https://tradingfours.app/",
    description: "Chat, but the language is MIDI",
    image: "/images/trading-fours.png",
  },
  {
    name: "encourage.nvim",
    url: "https://github.com/r-cha/encourage.nvim",
    description: "A neovim plugin to cure your impostor syndrome",
    image: "/images/encourage-nvim.png",
  },
];
const projects = [
  {
    name: "Tritip",
    url: "https://github.com/r-cha/tritip",
    description: "A CLI for typing practice",
  },
  {
    name: "dotfiles",
    url: "https://github.com/r-cha/dotfiles",
    description: "Literally just my dotfiles: how I set up my tools",
  },
  {
    name: "Rhema Journal",
    url: "https://rhemajournal.com/",
    description: "An iOS app for journaling God's word",
  },
  {
    name: "rochadrums",
    url: "https://www.rochadrums.com/",
    description: "A portfolio website for my drumming",
  },
];
---

<section class="w-auto">
  <ul
    class="max-w-[400px] border-white pl-0 mb-4 gap-4 divide-y"
  >
    {
      projectsWithImages.map((project) => (
        <li class="p-4 grid md:grid-cols-2">
          <img
            src={project.image}
            alt={project.name}
            class="w-50%"
          />
          <div>
            <a
              href={project.url}
              target="_blank"
              class="text-xl font-mono tracking-tight text-nowrap text-decoration hover:underline hover:text-neutral-200"
            >
              {project.name}
            </a>
            <p class="ml-2 text-left text-xs font-light text-neutral-300">
              {project.description}
            </p>
          </div>
        </li>
      ))
    }
  </ul>
  <ul class="max-w-[400px] border-white border-l pl-4 mb-4">
    {
      projects.map((project) => (
        <li class="pb-2">
          <a
            href={project.url}
            target="_blank"
            class="font-mono tracking-tight text-nowrap text-decoration hover:underline hover:text-neutral-200"
          >
            {project.name}
          </a>
          <p class="ml-2 text-left text-xs font-light text-neutral-300">
            {project.description}
          </p>
        </li>
      ))
    }
  </ul>
</section>
