---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import ProjectsList from "../components/ProjectsList.astro";
import NavBar from "../components/NavBar.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="mt-8 mx-4" style="background-color: var(--color-bg); color: var(--color-text);">
    <header
      class="flex max-w-prose mx-auto justify-between mb-8 pb-4" style="border-bottom: 1px solid var(--color-border);"
    >
      <a href="/" class="font-mono tracking-tight text-nowrap self-end"
        >Robert Chandler</a
      >
      <NavBar minimal={true} />
    </header>
    <main class="prose-container">
      <div>
        <h1 class="text-2xl mb-4" style="font-family: var(--font-serif); font-weight: 600; line-height: 1.2;">Projects</h1>
        <p class="mb-8 leading-relaxed" style="color: var(--color-text-muted);">
          These are some of my personal projects: apps, websites, and more.
        </p>
      </div>
      <ProjectsList />
    </main>
  </body>
</html>
