---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import NavBar from "../../components/NavBar.astro";
import Posts from "../../components/Posts.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="my-8 mx-4" style="background-color: var(--color-bg); color: var(--color-text);">
    <header
      class="flex max-w-prose mx-auto justify-between mb-8 pb-4" style="border-bottom: 1px solid var(--color-border);"
    >
      <a href="/" class="font-mono tracking-tight text-nowrap self-end"
        >Robert Chandler</a
      >
      <NavBar minimal={true} />
    </header>
    <main class="flex justify-center">
      <div>
        <h1 class="text-xl mb-4" style="font-family: var(--font-serif); font-weight: 600; line-height: 1.2;">Blog</h1>
        <p class="mb-6 text-sm text-neutral-300">
          Sometimes I write. Technical, philosophical, or just for fun.
        </p>
        <Posts />
      </div>
    </main>
  </body>
</html>
